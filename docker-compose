version: "3.9"

services:
  db:
    image: postgres:15
    environment:
      POSTGRES_DB: videos
      POSTGRES_USER: videos
      POSTGRES_PASSWORD: videos
    volumes:
      - db_data:/var/lib/postgresql/data

  backend:
    build:
      context: .
      dockerfile: backend/Dockerfile
    env_file:
      - .env.backend
    volumes:
      - media:/app/media
    depends_on:
      - db

  frontend:
    build:
      context: .
      dockerfile: frontend/Dockerfile
    depends_on:
      - backend

  nginx:
    image: nginx:alpine
    volumes:
      - ./nginx/nginx.conf:/etc/nginx/nginx.conf:ro
      - media:/media
      - frontend_build:/usr/share/nginx/html
    ports:
      - "80:80"
    depends_on:
      - backend
      - frontend

volumes:
  db_data:
  media:
  frontend_build:
