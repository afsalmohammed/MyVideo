events {}

http {
  upstream backend {
    server backend:8000;
  }

  server {
    listen 80;

    location /api/ {
      proxy_pass http://backend/api/;
    }

    location /media/ {
      proxy_pass http://backend/media/;
    }

    location / {
      root /usr/share/nginx/html;
      try_files $uri /index.html;
    }
  }
}
